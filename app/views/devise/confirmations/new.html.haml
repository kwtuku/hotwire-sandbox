%h2= t('.resend_confirmation_instructions')
= bootstrap_form_with(model: resource, url: confirmation_path(resource_name), data: { turbo: false }) do |f|
  = f.alert_message t('errors.messages.not_saved', count: resource.errors.count,
    resource: resource.class.model_name.human.downcase)
  = f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
  = f.primary t('.resend_confirmation_instructions')
= render 'devise/shared/links'
