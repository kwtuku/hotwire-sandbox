%h1.text-center= t('.forgot_your_password')
= bootstrap_form_with(model: resource, url: password_path(resource_name), data: { turbo: false }) do |f|
  = f.alert_message t('errors.messages.not_saved', count: resource.errors.count,
    resource: resource.class.model_name.human.downcase)
  = f.email_field :email
  = f.primary t('.send_me_reset_password_instructions')
.mt-3= render 'devise/shared/links'
