%h2= t('.change_your_password')
= bootstrap_form_with(model: resource, url: password_path(resource_name), method: :put, data: { turbo: false }) do |f|
  = f.alert_message t('errors.messages.not_saved', count: resource.errors.count,
    resource: resource.class.model_name.human.downcase)
  = f.hidden_field :reset_password_token
  = f.password_field :password, label: t('.new_password'),
    help: t('devise.shared.minimum_password_length', count: @minimum_password_length)
  = f.password_field :password_confirmation, label: t('.confirm_new_password')
  = f.primary t('.change_my_password')
= render 'devise/shared/links'
