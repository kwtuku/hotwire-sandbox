- flash.each do |key, message|
  .toast.align-items-center.border-0{ 'aria-atomic': 'true', 'aria-live': 'assertive', role: 'alert',
    class: "text-bg-#{key != 'alert' ? 'primary' : 'danger'}", data: { controller: 'toast', turbo_cache: 'false' } }
    .d-flex
      .toast-body= message
      %button.btn-close.btn-close-white.me-2.m-auto{ 'aria-label': 'Close', 'data-bs-dismiss': 'toast', type: 'button' }
